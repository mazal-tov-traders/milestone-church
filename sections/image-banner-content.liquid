{%- capture css_variables -%}
  --color-heading:{{ section.settings.colors_heading_label }};
{%- endcapture -%}

<style>
  :root {
    {{ css_variables | strip_newlines }}
  }
</style>
<div class="banner banner-content {% if request.page_type != 'index' %}banner-img{% endif %} {{ page.title }}">
  <div class="banner-innerr {{ section.settings.class }} {%- if section.settings.centered-content == true -%}banner-innerr-center{% endif %}">
    <div class="page-width">
      <div class="banner-innerr__box">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              {%- if block.settings.heading != blank -%}
                <h1 class="banner-plus-content_heading" style="color: var(--color-heading);">
                  {{ block.settings.heading }}
                </h1>
                <div class="border-line {% if section.settings.border_line == true %}on{% endif %}">.</div>
              {% else %}
                {%- for block in section.blocks -%}
                  {%- case block.type -%}
                    {%- when 'title_screen' -%}
                      {% if block.settings.screen_reader_text != blank %}
                        <h1 class="screen-reader-text">
                          {{ block.settings.screen_reader_text }}
                        </h1>
                      {% endif %}
                  {% endcase %}
                {% endfor %}
              {% endif %}
            {%- when 'content' -%}
              {%- if block.settings.content != blank -%}
                <div class="banner-innerr__box_text">
                  <p>{{ block.settings.content }}</p>
                </div>
              {%- endif -%}
            {%- when 'description' -%}
              {%- if block.settings.description != blank -%}
                <div class="banner-innerr__box_discription">
                  <p>{{ block.settings.description }}</p>
                </div>
              {%- endif -%}
            {%- when 'buttons' -%}
              <div
                class="banner-innerr__box_button-image-banner-content"
              >
                {%- if block.settings.button_label_1 != blank -%}
                  <a
                    {% if block.settings.button_link_1 == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link_1 }}"
                    {% endif %}
                    class="my-custom-btn {{ section.settings.style_btn }}"
                    id="{% if template == 'index' %}german{% else %}navigation-anchor__link{% endif %}"
                  >
                    {{- block.settings.button_label_1 | escape -}}
                  </a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
      {% if section.settings.hero_image != blank %}
        <div class="banner-innerr__hero-image">
          <img
            src="{{ section.settings.hero_image | img_url: 'original' }}"
            alt="image"
            class="banner-innerr__hero-image_img"
          >
        </div>
      {% endif %}
    </div>
  </div>
</div>
<style>
  .banner-innerr.{{ section.settings.class }}{
    background-image: url({{ section.settings.background | image_url: width: 3840 }});
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }
</style>

{% schema %}
{
  "name": "Banner + content blocks",
  "tag": "section",
  "class": "banner-plus-content",
  "settings": [
    {
      "type": "text",
      "id": "class",
      "label": "Second class for backgroun"
    },
    {
      "type": "image_picker",
      "id": "background",
      "label": "Background image"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero image"
    },
    {
      "type": "checkbox",
      "id": "border_line",
      "default": false,
      "label": "ADD/REMOVE LINE"
    },
    {
      "type": "color",
      "id": "colors_heading_label",
      "label": "Colors Heading Label"
    },
    {
      "type": "select",
      "id": "style_btn",
      "options": [
        {
          "value": "gold",
          "label": "gold"
        },
        {
          "value": "blue",
          "label": "blue"
        },
        {
          "value": "white",
          "label": "white"
        }
      ],
      "default": "white",
      "label": "button color"
    },
    {
      "type": "checkbox",
      "id": "centered-content",
      "default": false,
      "label": "Сentered Сontent"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Image banner",
          "label": "Heading"
        }
      ]
    },
    {
      "type": "content",
      "name": "Content",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "content",
          "default": "Give customers details about the banner image(s) or content on the template.",
          "label": "Content"
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ]
    },
    {
      "type": "buttons",
      "name": "Buttons",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label_1",
          "default": "Button label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "Button link"
        }
      ]
    },
    {
      "type": "title_screen",
      "name": "Hidden Main Title",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "screen_reader_text",
          "label": "Hidden Main Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner + content blocks"
    }
  ]
}
{% endschema %}


