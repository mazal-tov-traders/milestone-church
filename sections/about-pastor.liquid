<section class="about-pastor page-width">
  <div class="about-pastor__heading">
    {% if section.settings.heading != blank %}
      <div class="about-pastor__heading_text" style=" color: {{ section.settings.color_heading_label }};">
        {{ section.settings.heading }}
      </div>
    {% endif %}
  </div>
  <div class="about-pastor__wrapper">
    <div class="about-pastor__wrapper_photo">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'authors_image' %}
              {% if block.settings.image != blank %}
                <div class="photo_img">
                  <img
                    src="{{ block.settings.image | img_url: 'original' }}"
                    alt="image"
                    class="image"
                  >
                </div>
              {% endif %}
        {% endcase %}
      {% endfor %}
    </div>

    <div class="about-pastor__wrapper_content">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'content' %}
            {% if block.settings.heading != blank %}
              <div class="content_heading" style=" color: {{ block.settings.color_heading_label }};">
                {{ block.settings.heading }}
              </div>
            {% endif %}
            <div
              class="border-line {% if block.settings.border_line == true %}on{% endif %}"
              style="border-color:{{ block.settings.color_border_line }};"
            >
              .
            </div>

            {% if block.settings.text != blank %}
              <div class="content_text" style=" color: {{ block.settings.color_text_label }};">
                {{ block.settings.text }}
              </div>
            {% endif %}

            {% if block.settings.content != blank %}
              <div class="content_content" style=" color: {{ block.settings.color_content_label }};">
                {{ block.settings.content }}
              </div>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

<script charset=“utf-8” type=“text/javascript” src=“//js.hsforms.net/forms/embed/v2.js”></script>
<script>
  hbspt.forms.create({
    region: “na1",
    portalId: “23904200”,
    formId: “13e7d1be-3d45-4529-8332-1fb6fb14e1cc”
  });
</script>

{% schema %}
{
  "name": "About Pastor",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "color_heading_label",
      "label": "Color Heading Label",
      "default": "#e5be5e"
    }
  ],
  "blocks": [
    {
      "type": "authors_image",
      "name": "Author's image",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image Author"
        }
      ]
    },
    {
      "type": "content",
      "name": "Content",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "heading"
        },
        {
          "type": "color",
          "id": "color_heading_label",
          "label": "Color Heading Label",
          "default": "#e5be5e"
        },
        {
          "type": "checkbox",
          "id": "border_line",
          "default": false,
          "label": "ADD/REMOVE LINE"
        },
        {
          "type": "color",
          "id": "color_border_line",
          "label": "Color Border Line",
          "default": "#e5be5e"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "color",
          "id": "color_text_label",
          "label": "Color Text Label",
          "default": "#1D2228"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "color",
          "id": "color_content_label",
          "label": "Color Content Label",
          "default": "#1D2228"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Pastor"
    }
  ]
}
{% endschema %}
