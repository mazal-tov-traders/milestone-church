<section class="about-pastor page-width">
  <div class="about-pastor__heading">
    {% if section.settings.heading != blank %}
      <h2 class="about-pastor__heading_text">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
  </div>
  <div class="about-pastor__wrapper">
    <div class="about-pastor__wrapper_photo">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'authors_image' %}
              {% if block.settings.image != blank %}
                <div class="photo_img">
                  <img
                    src="{{ block.settings.image | img_url: 'original' }}"
                    alt="image"
                    class="image"
                  >
                </div>
              {% endif %}
        {% endcase %}
      {% endfor %}
    </div>

    <div class="about-pastor__wrapper_content">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'content' %}
            {% if block.settings.heading != blank %}
              <div class="content_heading">
                {{ block.settings.heading }}
              </div>
            {% endif %}

            {% if block.settings.text != blank %}
              <div class="content_text">
                {{ block.settings.text }}
              </div>
            {% endif %}

            {% if block.settings.content != blank %}
              <div class="content_content">
                {{ block.settings.content }}
              </div>
            {% endif %}
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "About Pastor",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "authors_image",
      "name": "Author's image",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "image Author"
        }
      ]
    },
    {
      "type": "content",
      "name": "Content",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Pastor"
    }
  ]
}
{% endschema %}
